<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_ttcn">

        <ImageView
            android:id="@+id/imgback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:padding="5dp"
            android:src="@drawable/baseline_arrow_back"
            app:tint="@color/white" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="THÔNG TIN KHÁCH HÀNG"
            android:textAlignment="center"
            android:textColor="#FFF"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:background="@drawable/user"
                    android:padding="5dp"
                    android:src="@drawable/profile" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Họ tên:"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/opensan"/>

                <EditText
                    android:id="@+id/txt_guestname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_edt"
                    android:padding="10dp"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Loại khách hàng:"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/opensan" />

                <EditText
                    android:id="@+id/txt_guesttype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_edt"
                    android:padding="10dp"
                    android:enabled="false"
                    android:textSize="25dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Số điện thoại:"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/opensan"/>

                <EditText
                    android:id="@+id/txt_guestphone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_edt"
                    android:padding="10dp"
                    android:textSize="25dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Tài khoản:"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/opensan"/>

                <EditText
                    android:id="@+id/txt_guestusername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_edt"
                    android:padding="10dp"
                    android:textSize="25dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Mật khẩu:"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:fontFamily="@font/opensan"/>

                <EditText
                    android:id="@+id/txt_guestpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/bg_edt"
                    android:padding="10dp"
                    android:inputType="textPassword"
                    android:textSize="25dp" />
            </LinearLayout>
            <Button
                android:id="@+id/btn_guestupdate"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edt"
                android:backgroundTint="#333366"
                android:padding="10dp"
                android:text="Cập nhật"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />
            <Button
                android:id="@+id/btn_guestlogout"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_edt"
                android:backgroundTint="#333366"
                android:padding="10dp"
                android:layout_marginBottom="10dp"
                android:text="Đăng xuất"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="25dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>