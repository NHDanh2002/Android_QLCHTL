<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightYellow1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/left_arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Thông tin cửa hàng"
                android:textSize="25sp"
                android:fontFamily="@font/opensan"
                android:layout_weight="1"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VNgo"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textAlignment="center"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/xanh_nhat">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      Là một điểm đến lý tưởng cho nhu cầu mua sắm nhanh hàng ngày của bạn. Chúng tôi luôn luôn tự hào là một cửa hàng tiện lợi chuyên nghiệp, mang lại sự thuận tiện và dịch vụ hoàn toàn mới mẻ cho khách hàng."
                android:textSize="15dp"
                android:fontFamily="@font/opensan"
                />
            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:padding="5dp"
                android:src="@drawable/logo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="      Với phương châm Lifestyle Platform, VNgo đã phát triển một nền tảng sống thường nhật, tối ưu những dịch vụ tiện ích, văn hóa ẩm thực mới gần gũi mang đến một trải nghiệm sống hiện đại và chất lượng cho khách hàng. Luôn giữ vững tinh thần thân thiện, trao cho khách hàng những mặt hàng tốt nhất.Vừa lòng khác đến vui lòng khách đi."
                android:textSize="15dp"
                android:padding="10dp"
                android:fontFamily="@font/opensan"/>
            <TableRow>

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:src="@drawable/hinh_anh2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="VNGO cung cấp hàng hóa, dịch vụ với sự đa dạng, độc đáo và khác biệt. Hệ thống bán lẻ của tập đoàn VNGO cung cấp các sản phẩm và dịch vụ khác biệt trong việc phát triển các thực phẩm."
                    android:textSize="15dp"
                    android:paddingTop="10dp"
                    android:fontFamily="@font/opensan"/>
            </TableRow>
            <TableRow
                android:background="@color/xanh_dam">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:text="Mang đến giá trị số 1 tại Việt Nam"
                    android:textSize="18dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/opensan"/>
            </TableRow>
            <TableRow >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:paddingTop="15dp"
                    android:text="Bằng cách đáp ứng nhu cầu khách hàng với các sản phẩm hàng đầu, VNgo đang phát triển liên tục. Chúng tôi mong muốn phát triển công ty có môi trường làm việc mà ở đó các nhân viên luôn vui vẻ và hứng thú làm việc."
                    android:textSize="15dp"
                    android:fontFamily="@font/opensan"/>
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="250dp"
                    android:layout_marginTop="15dp"
                    android:padding="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:src="@drawable/hinh_anh3" />
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>