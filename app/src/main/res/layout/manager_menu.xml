<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightYellow1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Giao diện quản lý"
                android:textSize="25sp"
                android:fontFamily="@font/opensan"
                android:layout_weight="1"
                android:gravity="center"/>
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/logout"/>
        </TableRow>
    </TableLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:padding="10dp">
                <ImageView
                    android:id="@+id/qlkh"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/client"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Quản lý khách hàng"
                    android:textSize="21sp"
                    android:fontFamily="@font/opensan"
                    android:layout_weight="1"
                    android:gravity="center"/>
            </TableRow>
            <TableRow
                android:padding="10dp">
                <ImageView
                    android:id="@+id/qlnv"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/staff"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Quản lý nhân viên"
                    android:textSize="21sp"
                    android:fontFamily="@font/opensan"
                    android:layout_weight="1"
                    android:gravity="center"/>
            </TableRow>
            <TableRow
                android:padding="10dp">
                <ImageView
                    android:id="@+id/qlkho"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/box"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Quản lý kho"
                    android:textSize="21sp"
                    android:fontFamily="@font/opensan"
                    android:layout_weight="1"
                    android:gravity="center"/>
            </TableRow>
            <TableRow
                android:padding="10dp">
                <ImageView
                    android:id="@+id/qldanhmuc"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/options"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Quản lý danh mục"
                    android:textSize="21sp"
                    android:fontFamily="@font/opensan"
                    android:layout_weight="1"
                    android:gravity="center"/>
            </TableRow>
            <TableRow
                android:padding="10dp">
                <ImageView
                    android:id="@+id/qlhoadon"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/bill"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Quản lý hóa đơn"
                    android:textSize="21sp"
                    android:fontFamily="@font/opensan"
                    android:layout_weight="1"
                    android:gravity="center"/>
            </TableRow>
            <TableRow
                android:padding="10dp">
                <ImageView
                    android:id="@+id/qluudai"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:src="@drawable/gift"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Quản lý ưu đãi"
                    android:textSize="21sp"
                    android:fontFamily="@font/opensan"
                    android:layout_weight="1"
                    android:gravity="center"/>
            </TableRow>
        </TableLayout>
    </ScrollView>
</LinearLayout>