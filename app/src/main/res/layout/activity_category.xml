<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DanhMuc.CategoryActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/simple_addCategory"
        android:textSize="35sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/edtAddIdCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="Mã danh mục"/>

    <EditText
        android:id="@+id/edtAddNameCategory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tên danh mục" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <Button
            android:layout_marginRight="20dp"
            android:id="@+id/btnAddCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thêm"
            android:textSize="23sp"
            android:textStyle="bold" />
        <Button
            android:layout_marginRight="20dp"
            android:id="@+id/btnbackCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trở về"
            android:textSize="23sp"
            android:textStyle="bold" />


    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#f00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh mục"/>


    <ListView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lvAddCategory" />
</LinearLayout>