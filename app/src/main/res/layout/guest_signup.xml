<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/LightYellow1">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/img_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:src="@drawable/left_arrow"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Đăng ký thành viên"
                android:textSize="25sp"
                android:fontFamily="@font/opensan"
                android:layout_weight="1"
                android:gravity="center"/>
        </TableRow>
    </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Họ và tên"
            android:fontFamily="@font/opensan"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/guest_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edt"
            android:padding="10dp"
            
            android:textSize="25dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số điện thoại"
            android:fontFamily="@font/opensan"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/guest_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edt"
            android:padding="10dp"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tài khoản"
            android:fontFamily="@font/opensan"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/guest_taikhoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edt"
            android:padding="10dp"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Mật khẩu"
            android:fontFamily="@font/opensan"
            android:textColor="@color/black"
            android:textSize="20dp"/>

        <EditText
            android:id="@+id/guest_matkhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edt"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="25dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Nhập lại mật khẩu"
            android:fontFamily="@font/opensan"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/guest_matkhau_again"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/bg_edt"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="25dp" />

        <Button
            android:fontFamily="@font/opensan"
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_edt"
            android:text="Đăng ký"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_marginTop="20sp"
            android:layout_marginRight="4dp"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>
</LinearLayout>